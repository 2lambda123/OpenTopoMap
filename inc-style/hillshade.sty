		<RasterSymbolizer comp-op="grain-merge" opacity="0.9" scaling="bilinear" />
	</Rule>
</Style>

<Style name="elevation">
	<Rule>
		&maxscale_zoom5;
		&minscale_zoom5;
		<RasterSymbolizer>
			<RasterColorizer default-mode="linear" default-color="white" epsilon="0.001">
			<stop color="blue"        value = "-1000"  />
			<stop color="#2e9a58"         value = "1"   mode = "discrete" />
			<stop color="#f9ed63"      value = "300"      />
			<stop color="#d9a056"         value = "550"     />
			<stop color="#b86d3b"       value = "1000"     />
			<stop color="#6c1b08"       value = "2000"     mode = "exact"    />
			<stop color="#dedede"      value = "3000"    />
			</RasterColorizer>
		</RasterSymbolizer>
	</Rule>
</Style>
