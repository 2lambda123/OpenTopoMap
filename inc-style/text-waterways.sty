<Style name="text-waterways">
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom15;
		<Filter>[waterway] = 'river'</Filter>
		<TextSymbolizer face-name="DejaVu Serif Condensed Italic" size="10" fill="#2020ff" spacing="800" minimum-distance="800" minimum-path-length="50" max-char-angle-delta="20" dy="6" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" placement="line">[name]</TextSymbolizer>
	</Rule>
</Style>
