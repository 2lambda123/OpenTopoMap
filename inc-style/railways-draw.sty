<Style name="railways-draw">
	<Rule>
		&maxscale_zoom8;
		&minscale_zoom8;
		<Filter>([railway] = 'rail')</Filter>
		<LineSymbolizer stroke="black" stroke-width="1" stroke-opacity="0.9" />
	</Rule>
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom11;
		<Filter>([railway] = 'rail') and ([tunnel] != 'yes')</Filter>
		<LineSymbolizer stroke="black" stroke-width="1.5" stroke-opacity="0.9" />
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>([railway] = 'rail') and ([tunnel] != 'yes') </Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_small.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([railway] = 'rail') and ([tunnel] != 'yes')</Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_z13.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([railway] = 'rail') and ([tunnel] != 'yes')</Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_z14.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom15;
		<Filter>([railway] = 'rail') and ([tunnel] != 'yes')</Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_z15.png"/>
	</Rule>


	<Rule>
		&maxscale_zoom9;
		&minscale_zoom11;
		<Filter>([railway] = 'rail') and ([tunnel] = 'yes')</Filter>
		<LineSymbolizer stroke="black" stroke-width="1.5" stroke-opacity="0.5" stroke-dasharray="4,4" />
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>([railway] = 'rail') and ([tunnel] = 'yes') </Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_small_tunnel.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([railway] = 'rail') and ([tunnel] = 'yes')</Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_z13_tunnel.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([railway] = 'rail' and ([tunnel] = 'yes'))</Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_z14_tunnel.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom15;
		<Filter>([railway] = 'rail' and ([tunnel] = 'yes'))</Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_z15_tunnel.png"/>
	</Rule>
	
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>(([railway] = 'narrow_gauge') or ([railway] = 'funicular')) and ([tunnel] != 'yes')</Filter>
		<LineSymbolizer stroke="black" stroke-width="1.5" stroke-opacity="0.9" />
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom15;
		<Filter>(([railway] = 'narrow_gauge') or ([railway] = 'funicular')) and ([tunnel] != 'yes') </Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_small.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>(([railway] = 'narrow_gauge') or ([railway] = 'funicular')) and ([tunnel] = 'yes')</Filter>
		<LineSymbolizer stroke="black" stroke-width="1.5" stroke-opacity="0.5" stroke-dasharray="4,4" />
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom15;
		<Filter>(([railway] = 'narrow_gauge') or ([railway] = 'funicular')) and ([tunnel] = 'yes') </Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_small_tunnel.png"/>
	</Rule>
	

	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([railway] = 'disused')</Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_z13.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([railway] = 'disused')</Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_z14.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom15;
		<Filter>([railway] = 'disused')</Filter>
		<LinePatternSymbolizer file="symbols-topo/rail_z15.png"/>
	</Rule>
</Style>
