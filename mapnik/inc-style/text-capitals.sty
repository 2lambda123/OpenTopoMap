<Style name="text-capitals">
	<Rule>
		&maxscale_zoom4;
		&minscale_zoom4;
		<Filter>([place] = 'city') and ([capital] = 'yes')</Filter>
		<PointSymbolizer file="symbols-topo/city.png"/>
		<TextSymbolizer face-name="DejaVu Sans Condensed" size="10" fill="black" halo-radius="1" placement="point" dx="5" dy="-3" text-transform="uppercase">[name]</TextSymbolizer>
	</Rule>
