<Style name="text-cities">

<!-- zoom 5 -->
	<Rule>
		&maxscale_zoom5;
		&minscale_zoom5;
		<Filter>([place] = 'city') and not ([capital] = 'yes') and ([population] &gt; 1000000)</Filter>
		<PointSymbolizer file="symbols-topo/town_z8.png"/>
		<TextSymbolizer face-name="DejaVu Sans Condensed Bold" size="10" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" placement-type="list">[name]
			<Placement dx="5" dy="-3" />
			<Placement dx="5" dy="3" />
			<Placement dy="5" />
			<Placement dx="-5" dy="5" />
		</TextSymbolizer>
	</Rule>
