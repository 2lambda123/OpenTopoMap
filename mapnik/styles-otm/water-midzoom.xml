<Style name="water-midzoom">
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom10;
		<Filter>[way_area] &gt; 3000000</Filter>
		<PolygonSymbolizer fill="#97d2e3" />
		<LineSymbolizer stroke="blue" stroke-width="0.5" stroke-opacity="0.8" />
	</Rule>
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom10;
		<Filter>([way_area] &gt; 500000) and ([way_area] &lt; 3000000)</Filter>
		<PolygonSymbolizer fill="#97d2e3" />
		<LineSymbolizer stroke="blue" stroke-width="0.5" stroke-opacity="0.4" />
	</Rule>
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom10;
		<Filter>[way_area] &lt; 500000</Filter>
		<PolygonSymbolizer fill="#97d2e3" />
		<LineSymbolizer stroke="blue" stroke-width="0.5" stroke-opacity="0.2" />
	</Rule>
</Style>
