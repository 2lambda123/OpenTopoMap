<Style name="symbols-point-midzoom">

	<Rule>
		&maxscale_zoom9;
		&minscale_zoom9;
        	<Filter>(([natural] = 'peak' or [natural] = 'volcano') and ([otm_isolation] &gt; 25000))</Filter>
        	<MarkersSymbolizer placement="point" file="symbols-otm/peak.png"/>
	</Rule>

	<Rule>
		&maxscale_zoom10;
