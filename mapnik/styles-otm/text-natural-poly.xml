<Style name="text-natural-poly">
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>[natural] = 'water' and [way_area] &gt; 500000</Filter>
		<TextSymbolizer fontset-name="sans-oblique" size="10" fill="#2020ff" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" placement="interior">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom15;
		<Filter>[natural] = 'water' and [way_area] &gt; 50000</Filter>
		<TextSymbolizer fontset-name="sans-oblique" size="11" fill="#2020ff" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" placement="interior">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom16;
		&minscale_zoom17;
		<Filter>[natural] = 'water'</Filter>
		<TextSymbolizer fontset-name="sans-oblique" size="12" fill="#2020ff" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" placement="interior">[name]</TextSymbolizer>
	</Rule>
	

	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>[leisure] = 'nature_reserve' and [way_area] &gt; 1E7</Filter>
		<TextSymbolizer fontset-name="sans-condensed" size="13" fill="#77ad3c" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" placement="point" character-spacing="1">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>[leisure] = 'nature_reserve' and [way_area] &lt; 1E7 and [way_area] &gt; 1E6</Filter>
		<TextSymbolizer fontset-name="sans-condensed" size="11" fill="#77ad3c" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" placement="point">[name]</TextSymbolizer>
	</Rule>

	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>[leisure] = 'nature_reserve' and [way_area] &gt; 1E7</Filter>
		<TextSymbolizer fontset-name="sans-condensed" size="16" fill="#77ad3c" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" placement="point" character-spacing="6">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>[leisure] = 'nature_reserve' and [way_area] &lt; 1E7 and [way_area] &gt; 1E6</Filter>
		<TextSymbolizer fontset-name="sans-condensed" size="13" fill="#77ad3c" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" placement="point">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>[leisure] = 'nature_reserve' and [way_area] &lt; 1E6</Filter>
		<TextSymbolizer fontset-name="sans-condensed" size="11" fill="#77ad3c" halo-radius="1" halo-fill="rgba(255,255,255,0.7)" wrap-width="100" placement="point">[name]</TextSymbolizer>
	</Rule>
	
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>[leisure] = 'nature_reserve'</Filter>
		<TextSymbolizer fontset-name="sans-condensed" size="11" fill="#77ad3c" halo-radius="1" halo-fill="rgba(255,255,255,0.7)" wrap-width="100" placement="point">[name]</TextSymbolizer>
	</Rule>
</Style>
