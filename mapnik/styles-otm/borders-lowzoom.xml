<Style name="borders-lowzoom">
<!-- level = 2 -->
	<Rule>
		&maxscale_zoom4;
		&minscale_zoom5;
		<Filter>([level] = '2')</Filter>
		<LineSymbolizer stroke="#a101d9" stroke-width="0.4" />
	</Rule>
	<Rule>
		&maxscale_zoom6;
		&minscale_zoom6;
		<Filter>([level] = '2')</Filter>
